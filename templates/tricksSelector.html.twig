<nav class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    par ordre alphab√©tique
                </button>
            </h2>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <ul>
                    {% for trick in tricks | sort((a, b) => a.title <=> b.title)  %}
                        <li>
                            <a href="{{ path('trick', {id: trick.id}) }}">{{ trick.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header text-center" id="headingTwo">
            <h2 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Par type
                </button>
            </h2>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                <ul>
                    {% for type in types %}
                        <li><a href="{{ path('typeTricks', {typeId: type.id}) }}">{{ type.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    {% if app.user %}
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">
                <button class="btn" type="button">
                    <a href="{{ path('createTrick') }}">Ajouter trick</a>
                </button>
            </h2>
        </div>
    </div>
    {% endif %}
</nav>