{% extends 'base.html.twig' %}

{% block title 'All Tricks' %}

{% block body %}

    <h1>Toutes les figures disponibles :</h1>

    <div class="d-flex">
        <form class="form-group">
            <label for="type" class="text-center">Recherchez une figure par type</label>
            <select class="custom-select" id="type">
                <option selected disabled>Type</option>
                <option value="Grabs">Grabs</option>
                <option value="Stalls">Stalls</option>
                <option value="Straight airs">Straight airs</option>
            </select>
        </form>

        <main>

    {% for trick in tricks %}

        <div class="card">
            <img src="img/{{ trick.img }}" class="card-img-top" alt="Snowboard trick">
            <div class="card-body">
                <h5 class="card-title">{{ trick.title }}</h5>
                <h6>{{ trick.type }}</h6>
                <p class="card-text">{{ trick.content | slice(0,100) }}</p>
                <a href="{{ path('trick', {id: trick.id }) }}" class="btn btn-primary">Voir plus...</a>
            </div>
        </div>

    {% endfor %}

        </main>
    </div>
{% endblock %}
