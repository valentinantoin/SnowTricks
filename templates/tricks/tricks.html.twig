{% extends 'base.html.twig' %}

{% block title 'All Tricks' %}

{% block body %}

    <h1>Toutes les figures disponibles :</h1>

    <div class="d-flex">
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            par ordre alphab√©tique
                        </button>
                    </h2>
                </div>

                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <ul>
                            {% for trick in tricks | sort((a, b) => a.title <=> b.title)  %}
                                <li>
                                    <a href="{{ path('trick', {id: trick.id}) }}">{{ trick.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Par type
                        </button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        <ul>
                            <li><a href="">Grabs</a></li>
                            <li><a href="">Stalls</a></li>
                            <li><a href="">Straight airs</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <main>

        {% for trick in tricks %}

        <div class="card">
            <img src="img/{{ trick.img }}" class="card-img-top" alt="Snowboard trick">
            <div class="card-body">
                <h5 class="card-title">{{ trick.title }}</h5>
                <h6>{{ trick.type }}</h6>
                <p class="card-text">{{ trick.content | slice(0,100) }}</p>
                <a href="{{ path('trick', {id: trick.id }) }}" class="btn btn-primary">Voir plus...</a>
            </div>
        </div>

        {% endfor %}

        </main>
    </div>
{% endblock %}
