{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title 'Ajouter Trick' %}

{% block body %}

    <h1>Ajoutez un trick !!</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <main>
        <section class="form">
            {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(form.content, 'Description') }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(form.img, 'Image') }}
                {{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(form.video, 'Video') }}
                {{ form_widget(form.video, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(form.typeId, 'Type') }}
                {{ form_widget(form.typeId, {'attr': {'class': 'form-control'}}) }}
            </div>
            <a href="{{ path('createType') }}">Ajouter un type de trick</a>
            <div class="form-group row">
                {{ form_label(form.send, 'Ajouter') }}
                {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary form-control'}}) }}
            </div>
            {{ form_end(form) }}
        </section>
    </main>

{% endblock %}