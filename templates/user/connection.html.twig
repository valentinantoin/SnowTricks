{% extends 'base.html.twig' %}

{% block title 'Connexion' %}

{% block body %}

    <h1>Connectez-vous..!</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <main>
        <form action="{{ path('connection') }}" method="post" class="form">
            <div class="form-group">
                <label for="_username">Pseudo</label>
                <input type="text" class="form-control" id="_username" name="_username" value="{{ last_username }}" placeholder="Votre pseudo..." required>
            </div>
            <div class="form-group">
                <label for="_password">Mot de passe</label>
                <input type="password" class="form-control" id="_password" name="_password" placeholder="Votre mot de passe..." required>
                <a href="{{ path('passwordChange') }}">Mot de passe oubli√© ?</a>
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </main>

{% endblock %}